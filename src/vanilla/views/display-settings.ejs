<div
    id="<%= id %>"
    class="avp-display-settings avp-settings avp-popin"
    role="dialog"
    aria-labelledby="avp-display-settings-title"
>
    <div class="avp-header">
        <button
            class="avp-back-link"
            aria-label="<%= t('settings.backLabel') %> - <%= t('generalSettings.header') %>">
            <%= renderIcon("back", t("settings.back")) %>
        </button>
        <span id="avp-display-settings-title" role="header"><%= t("displaySettings.header") %></span>
    </div>
    <div class="avp-row">
        <button class="avp-language-settings-link">
            <%= t("displaySettings.languageSettingsLabel") %>&nbsp;
            <%= renderIcon("next", "") %>
        </button>
    </div>
    <div class="avp-row">
        <button class="avp-subtitle-settings-link">
            <%= t("displaySettings.subtitleSettingsLabel") %>&nbsp;
            <%= renderIcon("next", "") %>
        </button>
    </div>
    <div class="avp-row">
        <button class="avp-subtitle-display-settings-link">
            <%= t("displaySettings.subtitleDisplaySettingsLabel") %>&nbsp;
            <%= renderIcon("next", "") %>
        </button>
    </div>
    <div class="avp-row">
        <button class="avp-playback-speed-settings-link">
            <%= t("displaySettings.playbackSpeedSettingsLabel") %>
            <%= renderIcon("next", "") %>
        </button>
    </div>
    <div class="avp-row">
        <button class="avp-playback-quality-settings-link">
            <%= t("displaySettings.playbackQualitySettingsLabel") %>
            <%= renderIcon("next", "") %>
        </button>
    </div>
</div>
